<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="57dp"
    android:background="@drawable/bg_main_gradient"
    android:orientation="vertical"
    tools:context=".ui.fragment.MainFragment"
    android:gravity="top|center">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_mainFrag"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingStart="45dp"
        android:paddingEnd="10dp"
        />

<!--    <com.google.android.material.imageview.ShapeableImageView-->
<!--        android:layout_width="300dp"-->
<!--        android:layout_height="200dp"-->
<!--        android:src="@drawable/custom_slider"-->
<!--        app:shapeAppearanceOverlay="@style/slideshow_main"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Today Pic"
        android:textColor="@color/white_2"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:gravity="end"
        android:background="@drawable/bg_shape_mars">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="start|center"
            android:paddingStart="20dp"
            android:text="Discover Mars"
            android:textSize="19dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/rover_image"
            app:shapeAppearanceOverlay="@style/rover_style"
            android:gravity="end"/>

    </LinearLayout>

<!--    <com.google.android.material.tabs.TabLayout-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="35dp"-->
<!--        android:layout_marginStart="4dp"-->
<!--        android:layout_marginEnd="4dp"/>-->

</LinearLayout>